{
  "$schema": "http://json-schema.org/schema",
  "id": "domain",
  "type": "object",
  "cli": "nx",
  "properties": {
    "name": {
      "type": "string",
      "description": "Domain name",
      "x-prompt": "What name is the domain's name?"
    },
    "api": {
      "type": "boolean",
      "default": false,
      "description": "Generate api library."
    },
    "advisor-shell": {
      "type": "boolean",
      "default": false,
      "description": "Generate advisor shell library."
    },
    "corporate-shell": {
      "type": "boolean",
      "default": false,
      "description": "Generate corporate shell library."
    }
  },
  "required": ["name"]
}
