// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  name     String
  password String
  todos    ToDo[]
}

model ToDo {
  id          Int     @id @default(autoincrement())
  title       String
  description String?
  isDone      Boolean @default(false)
  user        User    @relation(fields: [userId], references: [id])
  userId      Int
}
